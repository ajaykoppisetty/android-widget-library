<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="LibAppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="LibAppTheme" parent="LibAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="swapeRefreshListViewStyle">@style/AppTheme.SwapeRefreshListView</item>
        <item name="android:progressBarStyleHorizontal">@style/AppTheme.SwapeRefreshListView.Progress</item>
    </style>

    <style name="AppTheme.SwapeRefreshListView" parent="@android:style/Widget.ListView">
        <item name="progressHeight">3dp</item>
        <item name="enabled">true</item>
    </style>

    <style name="AppTheme.SwapeRefreshListView.Progress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">true</item>
    </style>

</resources>